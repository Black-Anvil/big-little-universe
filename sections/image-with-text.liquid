<div class="swiper swiper-images-with-text swiper-section--{{ section.id }}">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <section class="swiper-slide section-image-with-text section-image-with-text--{{ block.id }} {{ section.settings.section_height }} {{ section.settings.section_height_mobile }}--mobile{% if block.settings.image_format == 'adapt_section_height' %} section-adapt-to-image{% endif %}">
        {% if block.settings.image_position == 'left' %}
          <div class="image{% if block.settings.mobile_image != null or block.settings.mobile_video != null %} image-desktop{% endif %}">
            {% if block.settings.image != null %}
              {% if block.settings.image_format == 'fit_full' %}
                {{ block.settings.image | image_url: height: 1440 | image_tag: loading: 'lazy', class: 'full-fit' }}
              {% else %}
                {{ block.settings.image | image_url: height: 1440 | image_tag: loading: 'lazy' }}
              {% endif %}
            {% elsif block.settings.video != null %}
              <video width="320" height="240"{% if block.settings.image_format == 'fit_full' %} class="full-fit"{% endif %} autoplay loop playsinline muted>
                <source src="{{ block.settings.video }}" type="video/mp4">
              	Your browser does not support the video tag.
              </video>
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          {% if block.settings.mobile_image != null or block.settings.mobile_video != null %}
            <div class="image image-mobile">
              {% if block.settings.image != null %}
                {% if block.settings.mobile_image_format == 'fit_full' %}
                  {{ block.settings.mobile_image | image_url: height: 1440 | image_tag: loading: 'lazy', class: 'full-fit' }}
                {% else %}
                  {{ block.settings.mobile_image | image_url: height: 1440 | image_tag: loading: 'lazy' }}
                {% endif %}
              {% elsif block.settings.mobile_video != null %}
                <video width="320" height="240"{% if block.settings.mobile_image_format == 'fit_full' %} class="full-fit"{% endif %} autoplay loop playsinline muted>
                  <source src="{{ block.settings.mobile_video }}" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          {% endif %}
        {% endif %}
        <div class="text">
          {% if block.settings.preheading != blank %}
          	<div class="pre-heading">
              {% if block.settings.mobile_preheading != blank %}
              	<div class="{{ block.settings.preheading_type }} hide-mobile">{{ block.settings.preheading }}</div>
              	<div class="{{ block.settings.mobile_preheading_type }} show-mobile">{{ block.settings.mobile_preheading }}</div>
              {% else %}
              	<div class="{{ block.settings.preheading_type }}">{{ block.settings.preheading }}</div>
              {% endif %}
          	</div>
          {% endif %}
		  {% if block.settings.heading != blank %}
          	<div class="heading">
              {% if block.settings.mobile_heading != blank %}
              	<div class="{{ block.settings.heading_type }} hide-mobile">{{ block.settings.heading }}</div>
              	<div class="{{ block.settings.mobile_heading_type }} show-mobile">{{ block.settings.mobile_heading }}</div>
              {% else %}
              	<div class="{{ block.settings.heading_type }}">{{ block.settings.heading }}</div>
              {% endif %}
          	</div>
          {% endif %}
		  {% if block.settings.subheading != blank %}
          	<div class="sub-heading">
              {% if block.settings.mobile_subheading != blank %}
              	<div class="{{ block.settings.subheading_type }} hide-mobile">{{ block.settings.subheading }}</div>
              	<div class="{{ block.settings.mobile_subheading_type }} show-mobile">{{ block.settings.mobile_subheading }}</div>
              {% else %}
              	<div class="{{ block.settings.subheading_type }}">{{ block.settings.subheading }}</div>
              {% endif %}
          	</div>
          {% endif %}
		  {% if block.settings.subsubheading != blank %}
          	<div class="sub-sub-heading">
              {% if block.settings.mobile_subsubheading != blank %}
              	<div class="{{ block.settings.subsubheading_type }} hide-mobile">{{ block.settings.subsubheading }}</div>
              	<div class="{{ block.settings.mobile_subsubheading_type }} show-mobile">{{ block.settings.mobile_subsubheading }}</div>
              {% else %}
              	<div class="{{ block.settings.subsubheading_type }}">{{ block.settings.subsubheading }}</div>
              {% endif %}
          	</div>
          {% endif %}
          {% if block.settings.text_image != null %}
          	<div class="text-image">
              {% if block.settings.text_image != null %}
              	{{ block.settings.text_image | image_url: height: 50 | image_tag: loading: 'lazy', class: 'hide-mobile' }}
              	{{ block.settings.mobile_text_image | image_url: height: 50 | image_tag: loading: 'lazy', class: 'show-mobile' }}
              {% else %}
              	{{ block.settings.text_image | image_url: height: 50 | image_tag: loading: 'lazy' }}
              {% endif %}
          	</div>
          {% endif %}
          {% if block.settings.primary_button != '' or block.settings.secondary_button != '' %}
            <div class="btn">
              {% if block.settings.primary_button != '' %}
              	{% if block.settings.mobile_primary_button != '' %}
              	  <a href="{{ block.settings.primary_button_url }}" class="button hide-mobile">{{ block.settings.primary_button }}</a>
              	  <a href="{{ block.settings.mobile_primary_button_url | default: block.settings.primary_button_url }}" class="button show-mobile">{{ block.settings.mobile_primary_button | default: block.settings.primary_button }}</a>
              	{% else %}
                  <a href="{{ block.settings.primary_button_url }}" class="button">{{ block.settings.primary_button }}</a>
              	{% endif %}
              {% endif %}
              {% if block.settings.secondary_button != '' %}
              	{% if block.settings.secondary_button != '' %}
              	  <a href="{{ block.settings.secondary_button_url }}" class="button button--secondary hide-mobile">{{ block.settings.secondary_button }}</a>
              	  <a href="{{ block.settings.mobile_secondary_button_url | default: block.settings.secondary_button_url }}" class="button button--secondary show-mobile">{{ block.settings.mobile_secondary_button | default: block.settings.secondary_button }}</a>
              	{% else %}
              	  <a href="{{ block.settings.secondary_button_url }}" class="button button--secondary">{{ block.settings.secondary_button }}</a>
              	{% endif %}
              {% endif %}
            </div>
          {% endif %}
        </div>
        {% if block.settings.image_position == 'right' %}
          <div class="image{% if block.settings.mobile_image != null or block.settings.mobile_video != null %} image-desktop{% endif %}">
            {% if block.settings.image != null %}
              {% if block.settings.image_format == 'fit_full' %}
                {{ block.settings.image | image_url: height: 1440 | image_tag: loading: 'lazy', class: 'full-fit' }}
              {% else %}
                {{ block.settings.image | image_url: height: 1440 | image_tag: loading: 'lazy' }}
              {% endif %}
            {% elsif block.settings.video != null %}
              <video width="320" height="240"{% if block.settings.image_format == 'fit_full' %} class="full-fit"{% endif %} autoplay loop playsinline muted>
                <source src="{{ block.settings.video }}" type="video/mp4">
              	Your browser does not support the video tag.
              </video>
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          {% if block.settings.mobile_image != null or block.settings.mobile_video != null %}
            <div class="image image-mobile">
              {% if block.settings.image != null %}
                {% if block.settings.mobile_image_format == 'fit_full' %}
                  {{ block.settings.mobile_image | image_url: height: 1440 | image_tag: loading: 'lazy', class: 'full-fit' }}
                {% else %}
                  {{ block.settings.mobile_image | image_url: height: 1440 | image_tag: loading: 'lazy' }}
                {% endif %}
              {% elsif block.settings.mobile_video != null %}
                <video width="320" height="240"{% if block.settings.mobile_image_format == 'fit_full' %} class="full-fit"{% endif %} autoplay loop playsinline muted>
                  <source src="{{ block.settings.mobile_video }}" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          {% endif %}
        {% endif %}
      </section>
    {% endfor %}
  </div>
  <div class="swiper-pagination swiper-pagination-{{ section.settings.pagination_position }}"></div>
</div>

{% if section.blocks.size > 1 %}
<script>
new Swiper('.swiper-images-with-text', {
  slidesPerView: 1,
  loop: true,
  autoHeight: false, 
  setWrapperSize: false, 
  autoplay: {
    delay: {{ section.settings.rotating_seconds | times: 1000 }},
	disableOnInteraction: false,
  },
  mousewheel: {
    forceToAxis: true
  },
  pagination: {
    el: '.swiper-pagination',
    type: 'bullets',
    clickable: true
  },
  breakpoints: {
    768: {
      autoHeight: true, 
      setWrapperSize: true
    }
  }
});
</script>
{% endif %}

