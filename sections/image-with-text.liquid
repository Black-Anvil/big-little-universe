  .swiper-section--{{ section.id }}.swiper-images-with-text .swiper-pagination .swiper-pagination-bullet.swiper-pagination-bullet-active {
	background: {{ section.settings.pagination_color }};
  }
  {% for block in section.blocks %}
    .section-image-with-text.section-image-with-text--{{ block.id }} .text {
      background: {{ block.settings.background_color }};
    }
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading .h1, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading .h2, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading .h3, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading .h4 {
	  font-size: {{ block.settings.preheading_font_size }}px;
	  line-height: {{ block.settings.preheading_line_height }}px;
	  color: {{ block.settings.preheading_text_color }};
	}
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .heading, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .heading .h1, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .heading .h2, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .heading .h3, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .heading .h4 {
	  font-size: {{ block.settings.heading_font_size }}px;
	  line-height: {{ block.settings.heading_line_height }}px;
	  color: {{ block.settings.heading_text_color }};
	}
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading .h1, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading .h2, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading .h3, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading .h4 {
	  font-size: {{ block.settings.subheading_font_size }}px;
	  line-height: {{ block.settings.subheading_line_height }}px;
	  color: {{ block.settings.subheading_text_color }};
	}
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading .h1, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading .h2, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading .h3, 
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading .h4 {
	  font-size: {{ block.settings.subsubheading_font_size }}px;
	  line-height: {{ block.settings.subsubheading_line_height }}px;
	  color: {{ block.settings.subsubheading_text_color }};
	}
    .section-image-with-text.section-image-with-text--{{ block.id }} .image {
      {% if block.settings.section_image_width == 'screen-width-one-half' %}
        width: 50%;
      {% elsif block.settings.section_image_width == 'screen-width-two-thirds' %}
        width: 60%;
      {% elsif block.settings.section_image_width == 'screen-width-three-quarters' %}
        width: 70%;
	  {% elsif block.settings.section_image_width == 'screen-width-full-image' %}
		width: 100%;
      {% endif %}
    }
    .section-image-with-text.section-image-with-text--{{ block.id }} .text {
      text-align: {{ block.settings.text_align }};
      {% if block.settings.section_image_width == 'screen-width-one-half' %}
        width: 50%;
      {% elsif block.settings.section_image_width == 'screen-width-two-thirds' %}
        width: 40%;
      {% elsif block.settings.section_image_width == 'screen-width-three-quarters' %}
        width: 30%;
	  {% elsif block.settings.section_image_width == 'screen-width-full-image' %}
		position: absolute;
		top: 0;
		left: 0;
		width: calc(100% - 80px);
		height: 100%;
		background: rgba(0, 0, 0, .{{ block.settings.image_overlay }});
		z-index: 2;
      {% endif %}
    }
	{% if block.settings.section_image_width == 'screen-width-full-image' %}
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .heading, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .text-image, 
  	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .btn {
		max-width: 100%;
	  }
	{% endif %}
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .btn .button:not(.button.button--secondary) {
	  {% if block.settings.primary_button_border_color != '' %}
	 	border: 1px solid {{ block.settings.primary_button_border_color }};
	  {% endif %}
	  {% if block.settings.primary_button_background_color != '' %}
		background: {{ block.settings.primary_button_background_color }};
	  {% endif %}
	  {% if block.settings.primary_button_text_color != '' %}
		color: {{ block.settings.primary_button_text_color }};
	  {% endif %}
	}
	.section-image-with-text.section-image-with-text--{{ block.id }} .text .btn .button.button--secondary {
	  {% if block.settings.secondary_button_border_color != '' %}
	 	border: 1px solid {{ block.settings.secondary_button_border_color }};
	  {% endif %}
	  {% if block.settings.secondary_button_background_color != '' %}
		background: {{ block.settings.secondary_button_background_color }};
	  {% endif %}
	  {% if block.settings.secondary_button_text_color != '' %}
		color: {{ block.settings.secondary_button_text_color }};
	  {% endif %}
	}
    @media (max-width: 767px) {
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text {
        background: {{ block.settings.mobile_background_color }};
      }
      {% if block.settings.mobile_image_position == 'top' %}
        .section-image-with-text.section-image-with-text--{{ block.id }} .image {
          order: 1;
        }
        .section-image-with-text.section-image-with-text--{{ block.id }} .text {
          order: 2;
        }
      {% else %}
        .section-image-with-text.section-image-with-text--{{ block.id }} .image {
          order: 2;
        }
        .section-image-with-text.section-image-with-text--{{ block.id }} .text {
          order: 1;
        }
      {% endif %}
	  {% if block.settings.section_image_width == 'screen-width-full-image' %}
	    .section-image-with-text.section-image-with-text--{{ block.id }} .text {
		  width: calc(100% - 40px) !important;
		  height: 100% !important;
		  padding-bottom: 0;
          background: rgba(0, 0, 0, .{{ block.settings.mobile_image_overlay }});
		}
		.section-image-with-text.section-image-with-text--{{ block.id }} .image {
		  min-height: 100%;
		}
	  {% endif %}
      {% if block.settings.mobile_section_image_width == 'box-size' %}
      .section-image-with-text.section-image-with-text--{{ block.id }} .image {
        height: auto !important;
        text-align: center;
      }
      .section-image-with-text.section-image-with-text--{{ block.id }} .image img {
        width: 100% !important;
        height: auto !important;
        margin: 0 auto;
      }
      {% endif %}
      .section-image-with-text.section-image-with-text--{{ block.id }} .text {
        text-align: {{ block.settings.mobile_text_align }};
      }
      .section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading .h1, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading .h2, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading .h3, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .pre-heading .h4 {
        font-size: {{ block.settings.mobile_preheading_font_size }}px;
        line-height: {{ block.settings.mobile_preheading_line_height }}px;
        color: {{ block.settings.mobile_preheading_text_color }};
      }
      .section-image-with-text.section-image-with-text--{{ block.id }} .text .heading, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .heading .h1, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .heading .h2, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .heading .h3, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .heading .h4  {
        font-size: {{ block.settings.mobile_heading_font_size }}px;
        line-height: {{ block.settings.mobile_heading_line_height }}px;
        color: {{ block.settings.mobile_heading_text_color }};
      }
      .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading .h1, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading .h2, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading .h3, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-heading .h4  {
        font-size: {{ block.settings.mobile_subheading_font_size }}px;
        line-height: {{ block.settings.mobile_subheading_line_height }}px;
        color: {{ block.settings.mobile_subheading_text_color }};
      }
      .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading .h1, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading .h2, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading .h3, 
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .sub-sub-heading .h4  {
        font-size: {{ block.settings.mobile_subsubheading_font_size }}px;
        line-height: {{ block.settings.mobile_subsubheading_line_height }}px;
        color: {{ block.settings.mobile_subsubheading_text_color }};
      }
	  .section-image-with-text.section-image-with-text--{{ block.id }} .text .btn .button:not(.button.button--secondary) {
        {% if block.settings.mobile_primary_button_border_color != '' %}
          border: 1px solid {{ block.settings.mobile_primary_button_border_color }};
        {% endif %}
        {% if block.settings.mobile_primary_button_background_color != '' %}
          background: {{ block.settings.mobile_primary_button_background_color }};
        {% endif %}
        {% if block.settings.mobile_primary_button_text_color != '' %}
          color: {{ block.settings.mobile_primary_button_text_color }};
        {% endif %}
      }
      .section-image-with-text.section-image-with-text--{{ block.id }} .text .btn .button.button--secondary {
        {% if block.settings.mobile_secondary_button_border_color != '' %}
          border: 1px solid {{ block.settings.mobile_secondary_button_border_color }};
        {% endif %}
        {% if block.settings.mobile_secondary_button_background_color != '' %}
          background: {{ block.settings.mobile_secondary_button_background_color }};
        {% endif %}
        {% if block.settings.mobile_secondary_button_text_color != '' %}
          color: {{ block.settings.mobile_secondary_button_text_color }};
        {% endif %}
      }
    }
  {% endfor %}
{% endstyle %}

